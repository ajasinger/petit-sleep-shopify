{%- if product_card_product.featured_image -%}
  {%- assign variable_featured_image = product_card_product.featured_image -%}
{%- else -%}
  {%- assign variable_featured_image = full_product.featured_image -%}
{%- endif -%}

{%- if full_product -%}
  {%- assign real_product = full_product -%}
{%- else -%}
  {%- assign real_product = product_card_product -%}
{%- endif -%}

{%- if full_product -%}
  {%- assign variable_product_metafields = full_product.metafields -%}
{%- else -%}
  {%- assign variable_product_metafields = product_card_product.metafields -%}
{%- endif -%}

{%- if product_card_product.media -%}
  {%- assign variable_media = product_card_product.media -%}
{%- else -%}
  {%- assign variable_media = full_product.media -%}
{%- endif -%}
{% if full_product %}
  {% assign media_cursor = 0 %}
  {% if variable_featured_image == null %}
    {% assign media_cursor = 1 %}
  {% else %}
    {% for media in variable_media %}
      {% if media == variable_featured_image.src %}{% assign media_cursor = forloop.index %}{% break %}{% endif %}
    {% endfor %}
  {% endif %}
  {% assign prev_cursor = media_cursor | minus: 2 %}
  {% assign second_media = variable_media[media_cursor] | default: variable_media[prev_cursor] %}
{% else %}
  {% assign second_media = variable_media[1] %}
{% endif %}
{%- if product_card_product.featured_media -%}
  {%- assign variable_featured_media = product_card_product.featured_media -%}
{%- else -%}
  {%- assign variable_featured_media = full_product.featured_media -%}
{%- endif -%}

{%- if product_card_product.vendor -%}
  {%- assign variable_vendor = product_card_product.vendor -%}
{%- else -%}
  {%- assign variable_vendor = full_product.vendor -%}
{%- endif -%}

{% comment %}
    Renders a product card

    Accepts:
    - product_card_product: {Object} Product Liquid object (optional)
    - media_size: {String} Size of the product image card. Values are "square" and "portrait". Default is "square" (optional)
    - show_secondary_image: {Boolean} Show the secondary image on hover. Default: false (optional)
    - add_image_padding: {Boolean} Enables padding on the image to space out the grid
    - show_vendor: {Boolean} Show the product vendor. Default: false
    - show_image_outline: {Boolean} Show card outline. Default: true (optional)
    - show_rating: {Boolean} Show the product rating. Default: false

    Usage:
    {% render 'product-card', show_vendor: section.settings.show_vendor %}
{% endcomment %}

{% if show_rating %}{{ 'component-rating.css' | asset_url | stylesheet_tag }}{% endif %}

<div class="card-wrapper">
  <div class="card-information">
    <div class="card-information__wrapper">
      
      
      {% capture option_titles %}Pattern{% endcapture %}
 
      {% assign option_titles = option_titles | split:',' %}
      {% for option in full_product.options %}
        {% if option_titles contains option %}
          {% capture option_index %}option{{ forloop.index }}{% endcapture %}
          {% assign option_values = full_product.variants | map: option_index | uniq %}
          {% if option_values.size != 1 %}
            {% for opt in option_values %}
            <!--div class="color-swatch" style="background:{{ opt | downcase }};" class="option_circles">{{ opt | downcase }}</div-->
              {% if full_product.variants[forloop.index0].metafields.pattern.swatch %}
                <div class="pattern-swatch"
                       style="background: url({{full_product.variants[forloop.index0].metafields.pattern.swatch | file_url }}) no-repeat center center; background-size: contain;">
                  <span class="pattern-swatch-label">{{ opt }}</span>
                </div>
              {% endif %}
            {% endfor %}

          {% endif %}
        {% endif %}
      {% endfor %}


      {%- if show_vendor -%}
        <span class="visually-hidden">{{ 'accessibility.vendor' | t }}</span>
        <div class="caption-with-letter-spacing light">{{ variable_vendor }}</div>
      {%- endif -%}

      {%- if variable_featured_media -%}
        <h3 class="card-information__text h5">
          <a href="{{ product_card_product.url | default: '#' }}" class="full-unstyled-link">
            {% comment %}{% render 'variable-product-title', product: product_card_product, full_product: full_product %}{% endcomment %}
			  {% render 'variable-product-title', product: product_card_product, full_product: full_product %}
          </a>
        </h3>
      {%- endif -%}
      
      {% comment %} TODO: metafield {% endcomment %}
      <span class="caption-large light">{{ block.settings.description | escape }}</span>
      {%- if show_rating and variable_product_metafields.reviews.rating.value != blank -%}
        {% liquid
          assign rating_decimal = 0 
          assign decimal = variable_product_metafields.reviews.rating.value.rating | modulo: 1 
          if decimal >= 0.3 and decimal <= 0.7
            assign rating_decimal = 0.5
          elsif decimal > 0.7
            assign rating_decimal = 1
          endif 
        %}
        <div class="rating" role="img" aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: variable_product_metafields.reviews.rating.value, rating_max: variable_product_metafields.reviews.rating.value.scale_max }}">
          <span aria-hidden="true" class="rating-star color-icon-{{ settings.accent_icons }}" style="--rating: {{ variable_product_metafields.reviews.rating.value.rating | floor }}; --rating-max: {{ variable_product_metafields.reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};"></span>
        </div>
        <p class="rating-text caption">
          <span aria-hidden="true">{{ variable_product_metafields.reviews.rating.value }} / {{ variable_product_metafields.reviews.rating.value.scale_max }}</span>
        </p>
        <p class="rating-count caption">
          <span aria-hidden="true">({{ variable_product_metafields.reviews.rating_count }})</span>
          <span class="visually-hidden">{{ variable_product_metafields.reviews.rating_count }} {{ "accessibility.total_reviews" | t }}</span>
        </p>
      {%- endif -%}
      {% render 'price', product: product_card_product, price_class: '' %}
    </div>
  </div>

  <div class="card card--product{% if variable_featured_media == nil %} card--text-only card--soft{% endif %}{% if variable_featured_media != nil and show_image_outline %} card--outline{% endif %}" tabindex="-1">
    <div class="card__inner">
      {%- if variable_featured_media -%}
        {%- liquid
          assign featured_media_aspect_ratio = variable_featured_media.aspect_ratio

          if variable_featured_media.aspect_ratio == nil
            assign featured_media_aspect_ratio = 1
          endif
        -%}

        <div{% if add_image_padding %} class="card__media-full-spacer"{% endif %}>
          <div class="media media--transparent media--{{ media_size }} media--hover-effect"
            {% if media_size == 'adapt' and variable_featured_media %} style="padding-bottom: {{ 1 | divided_by: featured_media_aspect_ratio | times: 100 }}%;"{% endif %}
          >
            <img
              srcset="{%- if variable_featured_media.width >= 165 -%}{{ variable_featured_media | img_url: '165x' }} 165w,{%- endif -%}
                {%- if variable_featured_media.width >= 360 -%}{{ variable_featured_media | img_url: '360x' }} 360w,{%- endif -%}
                {%- if variable_featured_media.width >= 533 -%}{{ variable_featured_media | img_url: '533x' }} 533w,{%- endif -%}
                {%- if variable_featured_media.width >= 720 -%}{{ variable_featured_media | img_url: '720x' }} 720w,{%- endif -%}
                {%- if variable_featured_media.width >= 940 -%}{{ variable_featured_media | img_url: '940x' }} 940w,{%- endif -%}
                {%- if variable_featured_media.width >= 1066 -%}{{ variable_featured_media | img_url: '1066x' }} 1066w,{%- endif -%}
                {{ variable_featured_media | img_url: 'master' }} {{ variable_featured_media.width }}w"
              src="{{ variable_featured_media | img_url: '533x' }}"
              sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
              alt="{{ variable_featured_media.alt | escape }}"
              loading="lazy"
              class="motion-reduce"
              width="{{ variable_featured_media.width }}"
              height="{{ variable_featured_media.height }}"
            >

            {%- if second_media != nil and show_secondary_image -%}
              <img
                srcset="{%- if second_media.width >= 165 -%}{{ second_media | img_url: '165x' }} 165w,{%- endif -%}
                  {%- if second_media.width >= 360 -%}{{ second_media | img_url: '360x' }} 360w,{%- endif -%}
                  {%- if second_media.width >= 533 -%}{{ second_media | img_url: '533x' }} 533w,{%- endif -%}
                  {%- if second_media.width >= 720 -%}{{ second_media | img_url: '720x' }} 720w,{%- endif -%}
                  {%- if second_media.width >= 940 -%}{{ second_media | img_url: '940x' }} 940w,{%- endif -%}
                  {%- if second_media.width >= 1066 -%}{{ second_media | img_url: '1066x' }} 1066w,{%- endif -%}
                  {{ second_media | img_url: 'master' }} {{ second_media.width }}w"
                src="{{ second_media | img_url: '533x' }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                alt="{{ second_media.alt | escape }}"
                loading="lazy"
                class="motion-reduce"
              width="{{ second_media.width }}"
              height="{{ second_media.height }}"
              >
            {%- endif -%}
          </div>
        </div>
      {%- else -%}
        <div class="card__content">
          <h2 class="card__text h3">
            <a href="{{ product_card_product.url | default: '#' }}" class="full-unstyled-link">
              {% render 'variable-product-title', product: product_card_product, full_product: full_product %}
            </a>
          </h2>
        </div>
      {%- endif -%}

      <div class="card__badge">
        {%- if product_card_product.available == false -%}
          <span class="badge badge--bottom-left color-{{ settings.sold_out_badge_color_scheme }}">{{ 'products.product.sold_out' | t }}</span>
        {%- elsif product_card_product.compare_at_price > product_card_product.price and product_card_product.available -%}
          <span class="badge badge--bottom-left color-{{ settings.sale_badge_color_scheme }}">{{ 'products.product.on_sale' | t }}</span>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
